<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/wood1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainMenu"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-4468853554366589/2155847409">

        </com.google.android.gms.ads.AdView>
    </LinearLayout>

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:gravity="center"
       android:layout_weight="3"
       >

    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:text="Two Players"
        android:textSize="30sp"
        android:onClick="names"
        android:layout_weight="1"
        />

    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:text="vs Computer"
        android:textSize="30sp"
        android:onClick="name"
        android:layout_weight="1"
        />
       <Button
           style="@style/Widget.AppCompat.Button.Borderless"
           android:layout_gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="150dp"
           android:text="Instructions"
           android:textSize="24sp"
           android:onClick="instruct"
           android:layout_weight="1"
           />
   </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-4468853554366589/6262613378">

        </com.google.android.gms.ads.AdView>
    </LinearLayout>
</LinearLayout>